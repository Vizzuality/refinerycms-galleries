<% content_for :body_content_title do %>
  <%= @gallery.name %>
<% end %>

<% content_for :body_content_left do %>

  <div>
    <h3>Name</h3>
    <%= @gallery.name %>
  </div>

  <div>
    <h3>Body</h3>
    <%= raw @gallery.body %>
  </div>

  <div>
    <h3>Entries (<%= @gallery.gallery_entries.count %>)</h3>
    <ul>
    <% @gallery.gallery_entries.each do |gallery_entry| %>
      <li><%= image_fu gallery_entry.image, :medium %>
      <%= link_to(gallery_entry.name, gallery_gallery_entry_url(@gallery, gallery_entry)) %></li>
    <% end -%>
    </ul>
  </div>

<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="galleries">
    <% @galleries.each do |gallery| %>
      <li>
        <%= link_to gallery.name, gallery_url(gallery) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
